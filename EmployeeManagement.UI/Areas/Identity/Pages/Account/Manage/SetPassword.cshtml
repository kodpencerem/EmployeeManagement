@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Şifre Belirleme";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4>Şifrenizi belirleyiniz.</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<p class="text-info">
    
    Bu site için yerel bir kullanıcı adınız/şifreniz yok. Harici bir giriş yapmadan giriş yapabilmek için yerel bir hesap ekleyin.
</p>
<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.NewPassword"><strong>Şifre:</strong></label>
                <input asp-for="Input.NewPassword" class="form-control" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"><strong>Şifre Tekrarı:</strong></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Oluştur</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}